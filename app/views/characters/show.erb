
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
* {
  box-sizing: border-box;
}

/* Create two equal columns that floats next to each other */
.column {
  float: left;
  width: 50%;
  padding: 10px;
  height: 300px; /* Should be removed. Only for demonstration */
}

/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}
</style>
</head>
    <h1 >Character: <%= @character.name %></h1>   
    <% if @character.npc_pc != nil %> 
      <h3 >Type: <%= @character.npc_pc %></h3><br>
    <%end%>
    <div>
<div class="row">
  <div class="column">
    <dl>
        <dt><b>Stats:</b></dt>
        <% if @character.str != nil %>
          <dd>- Strength: <%= @character.str %></dd>
        <%end%>
        <% if @character.dex != nil %>
          <dd>- Dexterity: <%= @character.dex %></dd>
        <%end%>
        <% if @character.con != nil %>
          <dd>- Constitution: <%= @character.con %></dd>
        <%end%>
        <% if @character.int != nil %>
          <dd>- Intelligence: <%= @character.int %></dd>
        <%end%>
        <% if @character.wis != nil %>
          <dd>- Wisdom: <%= @character.wis %></dd>
        <%end%>
        <% if @character.cha != nil %>
          <dd>- Charisma: <%= @character.cha %></dd>
        <%end%>
    </dl><br>

    <dl>
        <% if @character.age != nil %>
          <dt><b>Age:</b> <%= @character.age %></dt>
        <%end%>
        <% if @character.height != nil %>
          <dt><b>Height:</b> <%= @character.height %></dt>
        <%end%>
        <% if @character.gender != nil %>
          <dt><b>Gender:</b> <%= @character.gender %></dt>
        <%end%>
        <% if @character.race != nil %>
          <dt><b>Race:</b> <%= @character.race %></dt>
        <%end%>
        <% if @character.subrace != nil %>
          <dd>- <b>SubRace:</b> <%= @character.subrace %></dd>
        <%end%>
        <% if @character.job != nil %>
