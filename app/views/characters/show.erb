        <%end%>
        <% if @character.alignment != nil %>
          <dt><b>Alignment:</b> <%= @character.alignment %></dt>
        <%end%>
        <% if @character.bg != nil %>
          <dt><b>Background:</b> <%= @character.bg %></dt>
        <%end%>  
    </dl><br>
  
    <% if @character.bio != nil %>
      <p><b>Bio:</b> <%= @character.bio %></p>
    <%end%>
  </div>
